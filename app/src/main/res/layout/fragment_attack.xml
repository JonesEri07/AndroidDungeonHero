            <ImageView
                android:id="@+id/hero_hp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/hero_hp7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/hero_hp8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

