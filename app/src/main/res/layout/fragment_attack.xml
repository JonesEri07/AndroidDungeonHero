<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AttackFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ProgressBar
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="200dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress"
                style="?android:attr/progressBarStyleHorizontal"

                />


            <ImageView
                android:id="@+id/enemy_hp"
                android:layout_width="?android:attr/progressBarCornerRadius"
                android:layout_height="?android:attr/progressBarCornerRadius"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark"
                app:layout_constraintDimensionRatio="1:1" />

            <ImageView
                android:id="@+id/enemy_hp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/enemy_hp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/enemy_hp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/enemy_hp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/enemy_hp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/enemy_hp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/enemy_hp7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/enemy_hp8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/enemy_hp9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hero_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/hero_hp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/hero_hp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/hero_hp4"
                android:layout_width="wrap_content"
